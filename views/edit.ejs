<%- include('partials/header') %>
<div class="ui main text container segment">
    <div class="ui huge header">
        <h1>Edit <%= blog.title %></h1>
    </div>
    <form class = "ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="blog[image]">Image</label>
            <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="blog[body]">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" required><%= blog.body %></textarea>
        </div>
        <input class="ui violet basic button big" type="submit">
    </form>
</div>

<%- include('partials/footer') %>