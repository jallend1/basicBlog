<%- include('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <h1>New Blog Page</h1>
    </div>
    <form class = "ui form" action="/blogs" method="POST">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label for="blog[image]">Image</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label for="blog[body]">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" required></textarea>
        </div>
        <input class="ui violet basic button big" type="submit">
    </form>
</div>

<%- include('partials/footer') %>